<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--<Switch
        android:id="@+id/SwitchTheme"
        android:layout_margin="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/thumb_drawable"
        android:track="@drawable/track_selector"
        android:checked="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>-->

    <LinearLayout
        android:id="@+id/calculate_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:gravity="end"
        app:layout_constraintBottom_toTopOf="@id/Buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >


        <TextView
            android:id="@+id/tv_valuesTyped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1456.34"
            android:textSize="40sp"
            android:textColor="@color/subText"
            android:fontFamily="@font/worksans_regular"/>

        <TextView
            android:id="@+id/Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1456.34"
            android:textSize="70sp"
            android:textColor="@color/black"
            android:fontFamily="@font/worksans_regular"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/Clean"
                style="@style/topbuttons"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/topbuttons"
                android:text="C" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/brackets"
                style="@style/topbuttons"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/topbuttons"
                android:gravity="center_vertical"
                android:text="()"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/black"
                app:iconSize="26dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/percent"
                style="@style/topbuttons"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/topbuttons"
                app:icon="@drawable/percent"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/black"
                app:iconSize="22dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/divide"
                style="@style/operationButtons"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/operationbutton"
                android:text="รท" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/seven"
                style="@style/PrimaryButtons"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/primarybutton"
                android:text="7" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/eight"
                style="@style/PrimaryButtons"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/primarybutton"
                android:text="8" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nine"
                style="@style/PrimaryButtons"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/primarybutton"
                android:text="9" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/multiplication"
                style="@style/operationButtons"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/operationbutton"
                app:icon="@drawable/multiplication"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/white"
                app:iconSize="26dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/four"
                style="@style/PrimaryButtons"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/primarybutton"
                android:text="4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/five"
                style="@style/PrimaryButtons"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/primarybutton"
                android:text="5" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/six"
                style="@style/PrimaryButtons"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/primarybutton"
                android:text="6" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/minus"
                style="@style/operationButtons"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/operationbutton"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/one"
                style="@style/PrimaryButtons"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/primarybutton"
                android:text="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/two"
                style="@style/PrimaryButtons"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/primarybutton"
                android:text="2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/three"
                style="@style/PrimaryButtons"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/primarybutton"
                android:text="3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/plus"
                style="@style/operationButtons"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/operationbutton"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/decimal"
                style="@style/PrimaryButtons"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/primarybutton"
                android:text="." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/zero"
                style="@style/PrimaryButtons"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/primarybutton"
                android:text="0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backspace"
                style="@style/PrimaryButtons"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/primarybutton"
                app:icon="@drawable/backspace"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/black"
                app:iconSize="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/equal"
                style="@style/operationButtons"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/operationbutton"
                android:text="=" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>